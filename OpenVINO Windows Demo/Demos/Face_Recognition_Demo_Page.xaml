<Page
    x:Class="OpenVINO_Windows_Demo.Demos.Face_Recognition_Demo_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenVINO_Windows_Demo.Demos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Uid="Face_Recognition_Demo_Title" Style="{StaticResource TitleTextBlockStyle}" Grid.Row="0"/>
            <TextBlock Margin="10" Style="{ThemeResource BaseTextBlockStyle}" Grid.Row="1" x:Uid="Face_Recognition_Demo_Intro"/>
            <StackPanel Grid.Row="2">
                <Button x:Uid="Demos_Run_Button" Click="Button_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <WebView x:Name="webView1" Source="https://synnexopenvinodemo.blob.core.windows.net/windowsdemoapp/GA.html?utm_source=WindowsDemoTool&amp;utm_medium=Face_Recognition_Demo_Page" Width="0" Height="0" Visibility="Visible"/>

            <TextBlock Grid.Row="0" x:Uid="Setting_Your_Models" Style="{StaticResource TitleTextBlockStyle}" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Grid.Row="1" x:Uid="Selection_Face_Detection_model" Margin="5" Style="{StaticResource SubtitleTextBlockStyle}" 
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="model0_TextBlock"/>
            <RelativePanel  Grid.Row="2">
                <ComboBox x:Name="model0_name" Width="600" RelativePanel.AlignLeftWithPanel="True" ItemsSource="{x:Bind combobox0_Models}"/>
                <Button x:Name="model0_select_button" Content="..." RelativePanel.RightOf="model0_name" />
                <ComboBox x:Name="model0_target" x:Uid="Demos_Target_Device" Width="200" RelativePanel.RightOf="model0_select_button" Margin="10,0" ItemsSource="{x:Bind Target_device_list}" >
                </ComboBox>
            </RelativePanel>

            <TextBlock Grid.Row="3" x:Uid="Selection_Facial_Landmarks_Regression_model" Margin="5" Style="{StaticResource SubtitleTextBlockStyle}" 
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="model1_TextBlock"/>
            <RelativePanel  Grid.Row="4">
                <ComboBox x:Name="model1_name" Width="600" RelativePanel.AlignLeftWithPanel="True" ItemsSource="{x:Bind combobox1_Models}"/>
                <Button x:Name="model1_select_button" Content="..." RelativePanel.RightOf="model1_name" />
                <ComboBox x:Name="model1_target" x:Uid="Demos_Target_Device" Width="200" RelativePanel.RightOf="model1_select_button" Margin="10,0" ItemsSource="{x:Bind Target_device_list}" >
                </ComboBox>
            </RelativePanel>

            <TextBlock Grid.Row="5" x:Uid="Selection_Face_Reidentification_model" Margin="5" Style="{StaticResource SubtitleTextBlockStyle}" 
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="model2_TextBlock"/>
            <RelativePanel  Grid.Row="6">
                <ComboBox x:Name="model2_name" Width="600" RelativePanel.AlignLeftWithPanel="True" ItemsSource="{x:Bind combobox2_Models}"/>
                <Button x:Name="model2_select_button" Content="..." RelativePanel.RightOf="model2_name" />
                <ComboBox x:Name="model2_target" x:Uid="Demos_Target_Device" Width="200" RelativePanel.RightOf="model2_select_button" Margin="10,0" ItemsSource="{x:Bind Target_device_list}" >
                </ComboBox>
            </RelativePanel>

            <TextBlock Grid.Row="7" x:Uid="Set_Face_Gallery" Margin="5" Style="{StaticResource SubtitleTextBlockStyle}" 
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="fg_TextBlock"/>
            <RelativePanel  Grid.Row="8">
                <TextBox x:Name="fg_Path" PlaceholderText="Default is " RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWith="fg_select_button"/>
                <Button x:Name="fg_select_button" Content="..." RelativePanel.AlignRightWithPanel="True" Click="fg_select_button_Click"/>
            </RelativePanel>
            <RelativePanel Grid.Row="9">
                <ToggleSwitch x:Name="run_detector_toggle" x:Uid="run_detector_toggle"
                              OffContent="Disable"
                              OnContent="Enable" RelativePanel.AlignLeftWithPanel="True"/>
                <ToggleSwitch x:Name="allow_grow_toggle" x:Uid="allow_grow_toggle"
                              OffContent="Disable"
                              OnContent="Enable" RelativePanel.Below="run_detector_toggle"/>
            </RelativePanel>

            <TextBlock Grid.Row="11" x:Uid="Setting_Your_Inference_Source" Style="{StaticResource TitleTextBlockStyle}" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" />
            <RelativePanel  Grid.Row="12">
                <TextBox x:Name="Source" PlaceholderText="cam" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWith="Source_select_button"/>
                <Button x:Name="Source_select_button" Content="..." RelativePanel.AlignRightWithPanel="True" Click="Source_select_button_Click"/>
            </RelativePanel>
            <RelativePanel Grid.Row="13">
                <Button Name="Preview_Button" Click="Preview_Button_Click" x:Uid="Camera_Preview_Button"/>
                <CaptureElement x:Name="PreviewControl"  RelativePanel.Below="Preview_Button" />
            </RelativePanel>
        </Grid>
    </Grid>
</Page>
